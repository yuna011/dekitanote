doctype html
html(lang="ja")
    head
        include _head.pug 
        title できた！ログ_登録
        link(rel="stylesheet", href="css/study.css")
    body
        .contentWrap 
            .btn
                p 
                    a(href="log.html") <i class="fa-solid fa-chevron-up"></i>
                p 
                    a(href="studyText.html") <i class="fa-solid fa-chevron-up"></i>
            .category 
                h1 勉強
                p できた!の数:20


            #chart
                table.charts-css.bar.show-labels
                    caption Single Dataset Table
                        thead
                            tr
                            th(scope="col") Month
                            th(scope="col") Progress
                        tbody
                            tr
                                th(scope="row") 1月
                                td(style="--size:calc(30 / 100)") 
                                    span.data 30
                            tr
                                th(scope="row") 2月
                                td(style="--size:calc(50 / 100)") 
                                    span.data 50
                            tr
                                th(scope="row") 3月
                                td(style="--size:calc(80 / 100)") 
                                    span.data 80
                            tr
                                th(scope="row") 4月
                                td(style="--size:calc(100 / 100)") 
                                    span.data 100
                            tr
                                th(scope="row") 5月
                                td(style="--size:calc(65 / 100)") 
                                    span.data 65
                            tr
                                th(scope="row") 6月
                                td(style="--size:calc(45 / 100)") 
                                    span.data 45
                    
        include _footer.pug


